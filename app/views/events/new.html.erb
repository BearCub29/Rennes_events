<html>
</br>
<h1 class="text-center"> Création Event </h1>
</br>
  <%= form_tag url_for(action: 'create'), method: "post" do %>
    <div class="d-flex justify-content-around text-center">
          <div class="card " style="width: 18rem;">
            <div class="card-body">
              <p class="card-text">Titre Event (min:5) <%= text_field_tag 'title' %> </p>
              <p class="card-text">Description (min:20)<%= text_field_tag 'description' %> </p>
              <p class="card-text">Prix (min:1€) <%= text_area_tag 'price' %> </p>
              <p class="card-text"> Ville <%= text_field_tag 'location' %> </p>
              <p class="card-text"> Date de départ <%= text_field_tag 'start_date' %> </p>
              <p class="card-text"> Durée <%= text_field_tag 'duration' %> </p>
              <hr class="my-4">
              <%= submit_tag "Créer Event" %>
            </div>
          </div>
        </div>
  <% end %>
  </body>
</html>
