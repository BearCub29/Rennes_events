<!DOCTYPE html>
<html>
  <head>
    <title>RennesEvents</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="/events">RennesEvents</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" href= "<%=new_event_path%>" >Events <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Contact</a>
      </li>
    </ul>
  </div>
  <% if user_signed_in? %>
        <div class="dropdown">
          <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Profil/Se deconnecter
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <li><%= link_to"Profil",user_path(current_user.id), class: "dropdown-item" %></li>
            <li><%= link_to "Se deconnecter",destroy_user_session_path, :method => :delete, class: "dropdown-item" %></li>
          </div>
        </div>
        <% else %>
        <div class="dropdown">
          <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              S'inscrire/Se connecter'
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <li><%= link_to"S'inscrire",new_user_registration_path, class: "dropdown-item" %></li>
          <li><%= link_to"Se connecter",new_user_session_path, class: "dropdown-item" %></li>
          </div>
        </div>
      <% end %>
</nav>
<%= yield %>
  </body>
</html>
